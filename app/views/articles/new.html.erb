<div class="container">
  <h1>New Article</h1>
  <%= form_with model: @article do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <%= f.submit %>
  <% end %>

  <%= link_to "Back to Home", articles_path, class: "btn btn-primary" %>
</div>
